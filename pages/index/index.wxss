/**index.wxss**/
.container{
  height: 1500rpx;
  padding: 0;
  font-size: 14rpx;
  background:#F2F2F2;
  color: #000;
}

.container .search{
  width: 735rpx;
  height: 65rpx;
  padding: 12.5rpx 0 12.5rpx 15rpx;
  background:#3CB371;
}

.container .search-left{
  flex: 8;
  background:	#43CD80	;
  text-align: left;
  border-radius: 30rpx;
}

.container .search-left input{
  display: inline-block;
  height: 65rpx;
  font-size: 26rpx;
}

.search-placeholder{
  color:#FFFFFF;
  line-height: 20rpx;
}

.container .search .search-left image{
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}

.container .search .search-right{
  flex: 1;
}

.container .search .search-right image{
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx;
}

.scroll-header{
display: flex;
white-space: nowrap;  
margin-top: 20rpx;
}

.scroll-header view{
height:50rpx;
width:130rpx;
font-size: 30rpx;
color: #8F8F8F;
display: inline-block;
}

.container .feed-item{
  border:1px solid #FFFFFF;
  width:300rpx;
  border-radius: 10px;
}

.container .share_img image{
width: 300rpx;
height: 300rpx;
padding: 10rpx 0 0; 
}

.container .feed_source_text{
  width:300rpx;
  font-size:10px;
}

.container .amount{
  font-size: 10px;
  color:red;
  display: inline-block;
  vertical-align: middle;
}
.container .want{
  display: inline-block;
  vertical-align: middle;
  margin-left:60px;
}
.container .box2{
  margin-top: 5px;
  width:300rpx;
  position: relative;
  display: inline-block;
}
.container .want text{
  font-size:8px;
  color:#8F8F8F;
}
.container .feed-item .feed-source .avatar{
  position: relative;
  display: inline-block;
}

.container .feed-item .feed-source .avatar image{
  display: inline-block;
  width: 45rpx;
  height: 45rpx;
  border-radius: 45rpx;
  top: 10rpx;
  vertical-align: middle;
}
.container .feed-item .feed-source text{
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  vertical-align: middle;
  margin: 0 0 0 15rpx;
  font-size: 26rpx;
}
.container .feed-source{
  margin-top: 5px;
}